http:
  routers:
    # TLS
    keycloak:
      entryPoints: websecure
      rule: Host(`{{ top_level_domain }}`) && PathPrefix(`{{ keycloak_base_path }}`)
      service: keycloak
      middlewares:
        - keycloak-strip-prefix
      tls: {}

  middlewares:
    keycloak-strip-prefix:
      stripPrefix:
        prefixes:
          - "{{ keycloak_base_path }}"

  services:
    keycloak:
      loadBalancer:
        servers:
          - url: "http://{{ hostvars[groups['keycloak'][0]]['ansible_host'] }}:{{ keycloak_http_port }}"
