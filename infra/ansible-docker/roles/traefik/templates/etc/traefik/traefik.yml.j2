global:
  checkNewVersion: false
  sendAnonymousUsage: false

log:
  level: ERROR
  noColor: true

accessLog:
  addInternals: false
  filePath: /var/log/traefik/access.log

api:
  dashboard: true

entryPoints:
  # Non-TLS entrypoints
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https

  # TLS entrypoints
  websecure:
    address: ":443"
  trino_tls:
    address: ":{{ trino_https_port }}"
{% if 'datastore' in groups %}
  minio_tls:
    address: ":{{ minio_api_port }}"
{% endif %}

providers:
  file:
    directory: /etc/traefik/dynamic
    watch: true
