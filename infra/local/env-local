LAKEKEEPER__PG_DATABASE_URL_WRITE=postgresql://$POSTGRES_USER:$POSTGRES_PASSWORD@$SHARED_DB__HOST:$SHARED_DB__PORT/$SHARED_DB__LAKEKEEPER_DB_NAME
